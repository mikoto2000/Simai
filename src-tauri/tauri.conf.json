{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Simai",
    "version": "0.0.0"
  },
  "tauri": {
    "cli": {
      "description": "Simple Markdown previewer.",
      "args": [
        {
          "name": "file",
          "index": 1,
          "takesValue": true
        }
      ]
    },
    "allowlist": {
      "all": false,
      "dialog": {
        "open": true
      },
      "fs": {
        "readFile": true
      }
    },
    "windows": [
      {
        "title": "Simai",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "dev.mikoto2000.simai",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
