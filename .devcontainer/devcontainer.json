{
  "name": "Rust",
  "image": "mikoto2000/tauri:latest",
  "remoteEnv": {
    "SHELL": "bash",
    "TERM": "xterm-256color",
    "DISPLAY": "${localEnv:DISPLAY}",
    "WAYLAND_DISPLAY": "${localEnv:WAYLAND_DISPLAY}",
    "XDG_RUNTIME_DIR": "${localEnv:XDG_RUNTIME_DIR}"
  },
    "mounts": [
    {
      "type": "bind",
      "source": "${localEnv:HOME}/.bashrc",
      "target": "/home/node/.bashrc"
    },
    {
      "type": "bind",
      "source": "/tmp/.X11-unix",
      "target": "/tmp/.X11-unix"
    },
    {
      "type": "bind",
      "source": "/mnt/wslg",
      "target": "/mnt/wslg"
    }
  ]
}
